<!DOCTYPE html>
<html>
<head>
    <script type='text/javascript' src="/js/maps.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>

    <!--<script type="text/javascript" src="/js/jquery.min.js"></script>-->
    <!--<script src="https://maps.google.com/maps/api/js?key=AIzaSyAuPcuo-7oFqieEYb62SmifV4rSGfxgunA&callback=initMap" async defer></script>-->
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAuPcuo-7oFqieEYb62SmifV4rSGfxgunA&libraries=visualization"></script>

    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <script type="text/javascript">
        var map;
        var heatmap;
        var points;
        function initialize() {
            var options = {
                center: new google.maps.LatLng(37.5407, -77.4360),
                zoom: 12,
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                libraries: 'visualization'
            };
            map = new google.maps.Map(document.getElementById('map'), options);

        }
        google.maps.event.addDomListener(window, 'load', initialize);
        $.get("/maps/points", function (results) {
            console.log(results);
            points = JSON.parse(results);
            console.log(points);
            var heatmapData = [];
            points.forEach(function (point) {
                console.log(point.geoCode);
                addPoint(point);
                heatmapData.push(new google.maps.LatLng(point.geoCode.lat, point.geoCode.lng))
            })
            heatmap = new google.maps.visualization.HeatmapLayer({
                data: heatmapData,
                radius: 75,
                opacity: .5,
                map: map
            });
            heatmap.setMap(map);

        });

        function addPoint(point) {
            var marker = new google.maps.Marker({
                position: point.geoCode,
                map: map,
                icon: "/drawables/blueMapMarker.png"
            });
        }
    </script>
</head>
<body>
<div id="tableOverlay" class="overlay" onclick="closeNav()">
    <div class="overlay-content"><%- include table %></div>
</div>

<div id="map"></div>
</body>
</html>
